{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "NodeNext",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",

    "outDir": "./out-node",
    "rootDir": "./src-node"
  },
  "include": ["src-node/**/*.ts"],
  "exclude": ["node_modules"]
}
